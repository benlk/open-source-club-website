.section.posts
  .container
    {% if page.is_post %}
    .category-title
      h5 {{ page.tags }}
      h5 {{ page.title }}
    {% endif %}
    .category-title
      h1 {{ page.category }}
    {% for post in paginator.posts %}
    
    {% assign post_word_count = post.content | size %}
    
    ul
      li
        {% if post.categories contains 'volunteering' or post.categories contains 'events' %}
        h2
          a(href='{{ site.baseurl }}/{{ post.categories | first }}') {{ post.title }}
        {% else %}
        h2
          a(href='{{ site.baseurl }}{{ post.url }}') {{ post.title }}
        {% endif %}
        
        span.date posted: {{ post.date | date: "%m-%d-%Y" }}
        .content
          
          {% if post.content.size > 1000 %}
          
          {% unless post.categories contains 'volunteering' or post.categories contains 'events' %}
          {{ post.content | truncatehtml: 500 }}
          a(href='{{ site.baseurl }}{{ post.url }}') read more
          {% endunless %}
    
          {% else %}      
          {{ post.content }}
          {% endif %}
          
    {% endfor %}
    {% if page.is_post %}
    ul
      li
        h2 {{ page.title }}
        span.date posted: {{ page.date | date: "%m-%d-%Y" }}
        .content
          {{ page.content | markdownify }}
    {% endif %}
  {% if page.is_post %}
  // TODO
  {% else %}
  // It is NOT a single post
  {% include html/pagination.html %}
  {% endif %}
